<div class="h-100 row text-light">
    <div class="col parent">
        <h1>{{title}}</h1>
        <form method='POST' action='/campaigns/save'>

            <div class="form-group">
                <p> Key:
                    <input class="form-control" type='text' name='campaignkey' value='' />
                </p>
            </div>

            <div class="form-group">
                <p> Title:
                    <input class="form-control" type='text' name='title' value='' />
                </p>
            </div>

            <div class="form-group">
                <textarea class="form-control" rows=3 cols=30 name='campaigndetail'></textarea>
            </div>

            <input class="btn btn-primary" type='submit' value='Submit' />

        </form>
    </div>
</div>