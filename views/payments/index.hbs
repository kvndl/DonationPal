<script src="https://js.stripe.com/v3/"></script>

<h1>Make a Payment</h1>

<main id="main" class="loading">

  <div id="checkout">
    <form action="payments/charge" method="POST" id="payment-form">
    <section>
      <h2>Billing Information</h2>
      <input type="hidden" name="campaign_id" value="1234567890" />
      <fieldset>
        <label>
          <span>Name</span>
          <input type="text" name="name" placeholder="Name" class="field" required>
        </label>
        <label>
          <span>Email</span>
          <input type="email" name="email" placeholder="Email" class="field" required>
        </label>
        <label>
          <span>Donation Amount</span>
          <select name="amount" class="field">
            <option value=5>$5</option>
            <option value=10>$10</option>
            <option value=15>$15</option>
            <option value=25>$25</option>
            <option value=50>$50</option>
          </select>
        </label>
      </fieldset>
    </section>
    <section>
      <h2>Payment Information</h2>
      <fieldset>
        <label>
          <span>Card</span>
          <div id="card-element" class="field"></div>
        </label>
      </fieldset>
        <button>Submit Payment</button>
    </form>
  </div>
  <div id="card-errors" role="alert"></div>
</main>

<script src="javascripts/stripe_form.js"></script>